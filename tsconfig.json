{
	"compilerOptions": {
		"types": [
			"node",
			"jest"
		],
		"module": "CommonJS",
		"preserveConstEnums": true,
	  	"strictNullChecks": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": ".build",
		"rootDir": "./",
		"declaration": true,
		"typeRoots": [
			"./node_modules/@types",
		]
	},
	"include": [
		"src/**/*",
	],
	"ts-node": {
		"files": true
	}
}
